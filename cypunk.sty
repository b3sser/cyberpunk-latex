\ExplSyntaxOn

\ProvidesPackage{cypunk}

% Load Required Packages
\input {lib/cypunk-requi.def}

% Set page geometry.
\geometry{
    top         = 0cm,
    bottom      = 0cm,
    left        = -0.6cm,
    right       = 0cm,
    footskip    = 8mm, % Bottom of text area to bottom of footer text
    columnsep   = 8mm, % Space between columns
}

% Set paragraph and line spacing
\setlength {\parindent} {1em}
\linespread {0.8}

% Restrict hyphenation
\tolerance        = 1
\emergencystretch = \maxdimen
\hyphenpenalty    = 10000
\hbadness         = 10000

%\RaggedRight

% Set Font
\setmainfont[
    Path=lib/fonts/exo/,
    Ligatures=TeX,
    UprightFont = *-Regular,
    ItalicFont = *-Italic,
    BoldFont = *-Bold,
    BoldItalicFont = *-BoldItalic
]{Exo}


% Customize itemize environment.
\setlist{leftmargin=1em}
\setitemize{noitemsep,topsep=0.5ex,label=\footnotesize{$\bullet$}}

% Load other modules of this package after all dependencies to avoid load order conflicts
\input{lib/cypunk-libload.def}

\input{template/character-commands.tex}

